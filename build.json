{ 
  "name" : "paradox-application",
  "external-libraries" :
  [
    {
      "os" : [ "windows", "linux" ],
      "name" : "glfw",
      "config" : { "git" : "https://github.com/glfw/glfw", "version" : "3.4" }
    }
  ],

  "paradox-libraries" :
  [
    {
      "name" : "paradox-platform",
      "config" : { "version" : "main" }
    }
  ],

  "build" :
  [
    {
      "name" : "glfw",
      "type" : "library",
      "library-type" : "static",
      "compiler-definitions" :
      [
        { "os" : ["windows"], "define" : "_GLFW_WIN32" }
      ],
      "sources" : [{ "repo" : "glfw", "directory" : "src" }],
      "includes" : [{ "repo" : "glfw", "directory" : "src" }]
    },
    {
      "name" : "paradox-desktop",
      "type" : "paradox-library",
      "sources" : [{ "repo" : "paradox-application", "library" : "paradox-desktop" , "directory" : "paradox-desktop" }],
      "includes" :
      [
        { "repo" : "paradox-application" , "library" : "paradox-desktop" },
        { "repo" : "paradox-platform", "library" : "paradox-platform" },
        { "repo" : "glfw" , "directory" : "include" }
      ],
      "libraries" : [ { "name" : "paradox-platform" }, { "name" : "glfw" }, { "name" : "opengl32" } ]
    }
  ]
}