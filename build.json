{ 
  "name" : "paradox-application",
  "external-libraries" :
  [
    {
      "os" : [ "windows", "linux" ],
      "name" : "glfw",
      "config" : { "git" : "https://github.com/glfw/glfw", "version" : "3.4" }
    }
  ],

  "paradox-libraries" :
  [
    {
      "name" : "paradox-platform",
      "config" : { "version" : "main" }
    }
  ],

  "build" :
  [
    {
      "name" : "paradox-application",
      "type" : "library",
      "sources" : [{ "repo" : "paradox-application", "library" : "paradox-application" , "directory" : "paradox-application" }],
      "includes" :
      [
        { "repo" : "paradox-application" , "library" : "paradox-application" },
        { "repo" : "paradox-platform", "library" : "paradox-platform" },
        { "repo" : "glfw" , "directory" : "include" }
      ],
      "libraries" : [ { "name" : "paradox-platform" } ]
    }
  ]
}